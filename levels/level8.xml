<level
    name="Level 8"
    tutorial="activate 3 relays, use weight, sparks and ghosts to trigger them"
>
    <!-- Vertical climb -->
    <platform x="0" y="670" w="1280" h="50" permanent="true" />

    <!-- Relay 1: Requires being HEAVY (>80%) -->
    <platform x="100" y="550" w="150" h="20" />
    <relay x="175" y="520" type="weight" />

    <!-- Relay 2: Requires being hit by a SPARK -->
    <platform x="1000" y="400" w="150" h="20" />
    <relay x="1075" y="370" type="spark" />
    <cable x="1075" y="0" len="200" /> <!-- Cable to provide sparks nearby -->

    <!-- Relay 3: Requires proximity to a GHOST -->
    <platform x="500" y="250" w="150" h="20" />
    <relay x="575" y="220" type="ghost" />
    <!-- Ghost will spawn when threshold is hit in game.py -->

    <!-- Middle parkour -->
    <platform x="400" y="500" w="100" h="20" />
    <platform x="700" y="450" w="100" h="20" />
    <platform x="400" y="350" w="100" h="20" />

    <!-- Exit at the very top -->
    <platform x="540" y="80" w="200" h="20" permanent="true" />
    <door x="610" y="0" target="level9" locked="true" />

    <!-- Helpful items -->
    <item x="50" y="600" type="fruit" frame="0" />
    <item x="1050" y="600" type="fruit" frame="0" />
</level>
